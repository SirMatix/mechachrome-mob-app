<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FloorPlan">

    <Button
        android:id="@+id/change_floor_button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:background="#B3FDD835"
        android:fontFamily="@font/roboto_slab"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="559dp"
        android:text="Change floor" />

    <ImageView
        android:id="@+id/floor_image"
        android:layout_width="407dp"
        android:layout_height="541dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        app:srcCompat="@drawable/floor1" />

</RelativeLayout>